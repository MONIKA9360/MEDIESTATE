generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lead {
  id         String     @id @default(uuid())
  name       String
  email      String
  phone      String
  subject    String     @default("")
  message    String
  propertyId String?
  status     LeadStatus @default(PENDING)
  priority   Priority   @default(MEDIUM)
  notes      String?
  assignedTo String?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model LoanLead {
  id         String         @id @default(uuid())
  name       String
  email      String
  phone      String
  subject    String
  message    String
  status     LoanLeadStatus @default(PENDING)
  priority   Priority       @default(MEDIUM)
  loanAmount String?
  loanType   String?
  notes      String?
  assignedTo String?
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt
}

enum LeadStatus {
  PENDING
  CONTACTED
  QUALIFIED
  CONVERTED
  REJECTED
}

enum LoanLeadStatus {
  PENDING
  UNDER_REVIEW
  APPROVED
  REJECTED
  DISBURSED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}
